{
  "name": "@herbsjs/herbsshelf",
  "version": "2.1.1",
  "description": "A self-generate documentation about the usecases (buchu) of herbsJS",
  "main": "./src/shelf.js",
  "scripts": {
    "test": "mocha --timeout 999999 --colors --recursive ./test",
    "coverage": "nyc --reporter=html mocha ./test",
    "lint": "npx eslint \"**/*.{js,jsx}\" --quiet",
    "lint:fix": "npx eslint \"**/*.{js,jsx}\" --fix",
    "semantic-release": "semantic-release",
    "commit": "cz"
  },
  "directories": {
    "lib": "src",
    "test": "test",
    "example": "examples"
  },
  "engines": {
    "node": ">= 12.3.0"
  },
  "keywords": [
    "self-documentation",
    "shelf",
    "herbsshelf",
    "buchu",
    "herbsjs"
  ],
  "devDependencies": {
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@semantic-release/release-notes-generator": "^9.0.3",
    "babel-eslint": "^10.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.1",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "semantic-release": "^17.4.4"
  },
  "author": "Jhonathan Soares",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/herbsjs/herbsshelf.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@herbsjs/herbs": "^1.4.0",
    "require-text": "0.0.1"
  }
}
